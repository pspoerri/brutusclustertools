import os
import re
import subprocess
brutus_options = '-R "rusage[gpu=1]"'
command = 'BGPU_CSELAB -solver PS -tend 10.0 -dt 0.01 -file {file} -dumpperiod 1 -prefix {prefix}_dt0.01_tend10.0_t0.5 -theta 0.5'

files = os.listdir('.')

fileprefix = 'circles_'
for filename in files:
  if re.match(fileprefix,filename):
    subprocess.check_output('echo {filename}'.format(filename=filename),
        stderr=subprocess.STDOUT,
        shell=True)
