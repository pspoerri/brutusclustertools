import os
import re
import subprocess
import time

brutus_command = 'bsub'
brutus_options = '-R "select[gputype==Fermi]"'
command = 'BGPU_CSELAB -solver PS -tend 10.0 -dt 0.01 -file {file} -dumpperiod 10 -prefix {prefix}_USING_BGPU_dt0.01_tend10.0_t0.5 -theta 0.5'

files = os.listdir('.')

fileprefix = 'circles_'
for filename in files:
    cmd_prepared = command.format(file=filename,
        prefix=filename)
    cmd = '{bcmd} {bopts} {cmd}'.format(bcmd=brutus_command,
        bopts=brutus_options,
        cmd=cmd_prepared)
    print "Executing ",cmd
    subprocess.check_call(cmd,shell=True)
    time.sleep(2) # Wait 5 seconds to start the next job
